@using System.Web.UI.HtmlControls
@model IEnumerable<Simorgh.Models.Hotel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HotelCity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Longitude)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Latitude)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Star)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoomTypes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HotelImageFiles)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoomTypes)
        </th>
        <th>
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HotelCity.CityName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Longitude)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Latitude)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Star)
        </td>
        <td>
            @foreach (var roomtype in item.RoomTypes)
            {
                @Html.Display(roomtype.Title)
            }
        </td>
        <td>
            @(item.RoomTypes == null ? "None" : item.RoomTypes.Count.ToString())
        </td>
        <td>
            @(item.HotelImageFiles == null ? "None" : item.HotelImageFiles.Count.ToString())
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            @*@Html.ActionLink("Add Rating", "~/Rating/Create", new { hotelid = item.Id })*@
        </td>
    </tr>
}

</table>
