@model Simorgh.Models.RoomReview

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>RoomReview</legend>

    <div class="display-label">UserId</div>
    <div class="display-field">@Model.UserId</div>

    <div class="display-label">ReviewTimestap</div>
    <div class="display-field">@String.Format("{0:g}", Model.ReviewTimestap)</div>

    <div class="display-label">Review</div>
    <div class="display-field">@Model.Review</div>

    <div class="display-label">UpVotes</div>
    <div class="display-field">@Model.UpVotes</div>

    <div class="display-label">DownVotes</div>
    <div class="display-field">@Model.DownVotes</div>

    <div class="display-label">IsConfirmed</div>
    <div class="display-field">@Model.IsConfirmed</div>

    <div class="display-label">AspNetUser</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.AspNetUser).ToString()</div>

    <div class="display-label">RoomType</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.RoomType).ToString()</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


