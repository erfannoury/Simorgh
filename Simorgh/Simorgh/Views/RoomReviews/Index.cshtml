@model IEnumerable<Simorgh.Models.RoomReview>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            UserId
        </th>
        <th>
            ReviewTimestap
        </th>
        <th>
            Review
        </th>
        <th>
            UpVotes
        </th>
        <th>
            DownVotes
        </th>
        <th>
            IsConfirmed
        </th>
        <th>
            AspNetUser
        </th>
        <th>
            RoomType
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RoomReviewId }) |
            @Html.ActionLink("Details", "Details", new { id=item.RoomReviewId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.RoomReviewId })
        </td>
        <td>
			@item.UserId
        </td>
        <td>
			@String.Format("{0:g}", item.ReviewTimestap)
        </td>
        <td>
			@item.Review
        </td>
        <td>
			@item.UpVotes
        </td>
        <td>
			@item.DownVotes
        </td>
        <td>
			@item.IsConfirmed
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.AspNetUser).ToString()
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.RoomType).ToString()
        </td>
    </tr>
}

</table>


