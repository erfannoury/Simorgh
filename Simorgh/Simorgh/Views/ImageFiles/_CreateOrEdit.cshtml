@model Simorgh.Models.ImageFile

@* This partial view defines form fields that will appear when creating and editing entities *@

<div class="editor-label">
    @Html.LabelFor(model => model.Path)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.Path)
    @Html.ValidationMessageFor(model => model.Path)
</div>

<div class="editor-label">
    RoomType
</div>
<div class="editor-field">
    @Html.DropDownListFor(model => model.RoomTypeId, ((IEnumerable<Simorgh.Models.RoomType>)ViewBag.PossibleRoomTypes).Select(option => new SelectListItem {
        Text = Html.DisplayTextFor(_ => option).ToString(), 
        Value = option.RoomTypeId.ToString(),
        Selected = (Model != null) && (option.RoomTypeId == Model.RoomTypeId)
    }), "Choose...")
    @Html.ValidationMessageFor(model => model.RoomTypeId)
</div>
<div class="editor-label">
    Hotel
</div>
<div class="editor-field">
    @Html.DropDownListFor(model => model.HotelId, ((IEnumerable<Simorgh.Models.Hotel>)ViewBag.PossibleHotels).Select(option => new SelectListItem {
        Text = Html.DisplayTextFor(_ => option).ToString(), 
        Value = option.HotelId.ToString(),
        Selected = (Model != null) && (option.HotelId == Model.HotelId)
    }), "Choose...")
    @Html.ValidationMessageFor(model => model.HotelId)
</div>
