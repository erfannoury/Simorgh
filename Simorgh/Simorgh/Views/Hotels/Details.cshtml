@model Simorgh.Models.Hotel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Hotel</legend>

    <div class="display-label">HotelName</div>
    <div class="display-field">@Model.HotelName</div>

    <div class="display-label">Address</div>
    <div class="display-field">@Model.Address</div>

    <div class="display-label">Longtitude</div>
    <div class="display-field">@Model.Longtitude</div>

    <div class="display-label">Latitude</div>
    <div class="display-field">@Model.Latitude</div>

    <div class="display-label">Description</div>
    <div class="display-field">@Model.Description</div>

    <div class="display-label">Star</div>
    <div class="display-field">@Model.Star</div>

    <div class="display-label">ServerURL</div>
    <div class="display-field">@Model.ServerURL</div>

    <div class="display-label">ImageFile</div>
    <div class="display-field">@(Model.ImageFile == null ? "None" : Model.ImageFile.Count.ToString())</div>

    <div class="display-label">RoomType</div>
    <div class="display-field">@(Model.RoomType == null ? "None" : Model.RoomType.Count.ToString())</div>

    <div class="display-label">City</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.City).ToString()</div>

    <div class="display-label">Rating</div>
    <div class="display-field">@(Model.Rating == null ? "None" : Model.Rating.Count.ToString())</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.HotelId }) |
    @Html.ActionLink("Back to List", "Index")
</p>


