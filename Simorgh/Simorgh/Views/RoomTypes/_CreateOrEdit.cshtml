@model Simorgh.Models.RoomType

@* This partial view defines form fields that will appear when creating and editing entities *@

<div class="editor-label">
    @Html.LabelFor(model => model.RoomTypeName)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.RoomTypeName)
    @Html.ValidationMessageFor(model => model.RoomTypeName)
</div>

<div class="editor-label">
    @Html.LabelFor(model => model.RoomTypeDescription)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.RoomTypeDescription)
    @Html.ValidationMessageFor(model => model.RoomTypeDescription)
</div>

<div class="editor-label">
    @Html.LabelFor(model => model.RoomCapacity)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.RoomCapacity)
    @Html.ValidationMessageFor(model => model.RoomCapacity)
</div>

<div class="editor-label">
    @Html.LabelFor(model => model.Price)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.Price)
    @Html.ValidationMessageFor(model => model.Price)
</div>

<div class="editor-label">
    Hotel
</div>
<div class="editor-field">
    @Html.DropDownListFor(model => model.HotelId, ((IEnumerable<Simorgh.Models.Hotel>)ViewBag.PossibleHotels).Select(option => new SelectListItem {
        Text = Html.DisplayTextFor(_ => option).ToString(), 
        Value = option.HotelId.ToString(),
        Selected = (Model != null) && (option.HotelId == Model.HotelId)
    }), "Choose...")
    @Html.ValidationMessageFor(model => model.HotelId)
</div>
