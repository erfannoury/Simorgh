@model Simorgh.Models.RoomType

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>RoomType</legend>

    <div class="display-label">RoomTypeName</div>
    <div class="display-field">@Model.RoomTypeName</div>

    <div class="display-label">RoomTypeDescription</div>
    <div class="display-field">@Model.RoomTypeDescription</div>

    <div class="display-label">RoomCapacity</div>
    <div class="display-field">@Model.RoomCapacity</div>

    <div class="display-label">Price</div>
    <div class="display-field">@Model.Price</div>

    <div class="display-label">Hotels</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.Hotels).ToString()</div>

    <div class="display-label">ImageFiles</div>
    <div class="display-field">@(Model.ImageFiles == null ? "None" : Model.ImageFiles.Count.ToString())</div>

    <div class="display-label">Reservations</div>
    <div class="display-field">@(Model.Reservations == null ? "None" : Model.Reservations.Count.ToString())</div>

    <div class="display-label">RoomReviews</div>
    <div class="display-field">@(Model.RoomReviews == null ? "None" : Model.RoomReviews.Count.ToString())</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


